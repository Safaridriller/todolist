<%- include("header") -%>
    <div class = "box" id = "heading">
        <h1><%= title %></h1>
    </div>
    <div class="box">
        <%   for (var i = 0; i < newitems.length; i++) {  %>
            <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" onChange = "this.form.submit()" value="<%= newitems[i].name %>" name="cbox" >
                <p> <%- newitems[i].name %></p>
            </div>
        </form>
        <% } %>
        <form action="/" method="post" class="item">
            <input type="text" name = "item1" placeholder="newitem" autocomplete="off">
            <button type="submit" name="list" value= "<%= title %>">+</button>
        </form>
    </div>
<%- include("footer") -%>
    
 